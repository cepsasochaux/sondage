{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="DIV_1">
                <h1 id="H1_2">
                    Enquête de satisfaction
                </h1>
                <div id="content_first">
                    <h2>{{ description }}</h2>
                    <h3>{{ title }}</h3>
                    <form name="first" method="post">
                    <table>
                        <tr>
                            <th>N°</th>
                            <th>PRESTATIONS</th>
                            {% for txt in choices %}
                                <th>{{ txt }}</th>
                            {% endfor %}
                            <th>les raisons pour vos réponses "plutôt non" ou "non pas du tout"</th>
                        </tr>
                        {% for question in questions %}
                            <tr>
                                <td>{{ question.id }}</td>
                                <td>{{ question.titre }}<span>{{ question.description }}</span></td>
                                <td><input type="radio" value="0" name="question_{{ question.id }}"></td>
                                <td><input type="radio" value="1" name="question_{{ question.id }}"></td>
                                <td><input type="radio" value="2" name="question_{{ question.id }}"></td>
                                <td><input type="radio" value="3" name="question_{{ question.id }}"></td>
                                <td><input type="radio" value="4" name="question_{{ question.id }}"></td>
                                <td><input type="text" name="question_{{ question.id }}_text"></td>
                            </tr>
                        {% endfor %}
                    </table>
                        <input type="submit" value="Suivant" name="submit">
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

