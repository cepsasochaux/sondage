{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="DIV_1">
                <h1 id="H1_2">
                    Enquête de satisfaction
                </h1>
                <div id="content_first" class="clearfix">
                    <h1>Quelques informations vous concernant...</h1>
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="block">
                        <h2>Êtes-vous :</h2>
                        {{ form_label(form.sexe) }}
                        {{ form_widget(form.sexe) }}<br>
                    </div>

                    <div class="block">
                        <h2>Dans quelle tranche d'âge vous situez-vous ?</h2>
                        {{ form_label(form.age) }}
                        {{ form_widget(form.age) }}<br>
                    </div>

                    <div class="block">
                        <h2>Quelle est votre catégorie socio-professionnelle ?</h2>
                        {{ form_label(form.profession) }}
                        {{ form_widget(form.profession) }}<br>
                    </div>

                    <div class="block">
                        <h2>Avez-vous des enfants à charge ?</h2>
                        {{ form_label(form.enfant) }}
                        {{ form_widget(form.enfant) }}<br>
                    </div>


                    <div class="block">
                        <h2>Si oui, merci de préciser le nombre d'enfant par tranche d'âge :</h2>
                        {{ form_label(form.enfantAge) }}
                        {{ form_widget(form.enfantAge) }}<br>
                    </div>

                    <div class="block">
                        <h2>Quelle est votre situation actuelle ?</h2>
                        {{ form_label(form.situation) }}
                        {{ form_widget(form.situation) }}<br>
                    </div>

                    {{ form_widget(form.save) }}
                    {{ form_end(form) }}


                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    <style>
        .col_id {
            text-align: center;
            color:white;
            background: orangered;
        }
        .active{
            background: #868686;
        }
        textarea {
            width: 320px;
