{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="DIV_1">
                <h1 id="H1_2">
                    Enquête de satisfaction
                </h1>
                <div id="content_first" class="clearfix">
                    <h1>Quelques informations vous concernant...</h1>
                    {{ form_start(form, {'attr' : {'id': 'myForm'}}) }}
                    {{ form_errors(form) }}
                    <div class="block clearfix">
                        <h2>Êtes-vous :</h2>
                        {% if client.sexe !='' %}
                            {{ form_widget(form.sexe,  {'attr': {'value': client.sexe}}) }}<br>
                        {% else %}
                            {{ form_widget(form.sexe) }}<br>
                        {% endif %}
                    </div>

                    <div class="block clearfix">
                        <h2>Dans quelle tranche d'âge vous situez-vous ?</h2>
                        {% if client.age !='' %}
                            {{ form_widget(form.age,  {'attr': {'value': client.age}}) }}<br>
                        {% else %}
                            {{ form_widget(form.age) }}<br>
                        {% endif %}
                    </div>

                    <div class="block clearfix">
                        <h2>Quelle est votre catégorie socio-professionnelle ?</h2>
                        {% if client.profession !='' %}
                            {{ form_widget(form.profession,  {'attr': {'value': client.profession}}) }}<br>
                        {% else %}
                            {{ form_widget(form.profession) }}<br>
                        {% endif %}
                    </div>

                    <div class="block clearfix">
                        <h2>Avez-vous des enfants à charge ?</h2>
                        {% if client.enfant !='' %}
                            {{ form_widget(form.enfant,  {'attr': {'value': client.enfant}}) }}<br>
                        {% else %}
                            {{ form_widget(form.enfant) }}<br>
                        {% endif %}
                    </div>


                    <div class="block clearfix">
                        <h2>Si oui, merci de préciser le nombre d'enfant par tranche d'âge :</h2>
                        <br><br><br>
                        <table>
                            <tr>
                                <th>0-5 ans</th>
                                <th>6-11 ans</th>
                                <th>12-15 ans</th>
                                <th>16-18 ans</th>
                                <th>18+ ans</th>
                            </tr>
                            <tr>
                                <td><select id='tranche_1' name="tranche_1">  <option selected value="0">0</option><option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option></select></td>
                                <td><select id='tranche_2' name="tranche_2">  <option selected value="0">0</option><option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option></select></td>
                                <td><select id='tranche_3' name="tranche_3">  <option selected value="0">0</option><option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option></select></td>
                                <td><select id='tranche_4' name="tranche_4">  <option selected value="0">0</option><option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option></select></td>
                                <td><select id='tranche_5' name="tranche_5">  <option selected value="0">0</option><option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option></select></td>
                            </tr>
                        </table>
                    </div>

                    <div class="block clearfix">
                        <h2>Quelle est votre situation actuelle ?</h2>
                        {% if client.situation !='' %}
                            {{ form_widget(form.situation,  {'attr': {'value': client.situation}}) }}<br>
                        {% else %}
                            {{ form_widget(form.situation) }}<br>
                        {% endif %}
                    </div>

                    <div class="right">{{ form_widget(form.save) }}</div>

                    {{ form_end(form) }}

                    {% if form.vars.valid == false %}
                        <p class="error"> There is an error in the form. please Correct. </p>
                    {% endif %}
                    <div id="myProgress">
                        <div id="myBar"></div>
                    </div>
                    <p id="text_prog">1%</p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    <style>
        #text_prog {
            color:black;
        }
        #myProgress {
            margin: 0 auto;
            width: 50%;
            background-color: #ddd;
        }

        #myBar {
            width: 1%;
            height: 30px;
            text-align: center;
            color:black;
            background-color: #4CAF50;
        }
        #form_sexe, #form_enfant {
            padding-top: 15px;
        }
        input[type=radio]{
            display: none;
        }
        /* Affichage par défaut du bouton radio personnalisé */
        input[type=radio] + label:before {
            background: #fff;
            border: 2px solid #ccc;
            border-radius: 50%;
            margin-top: -3px;
            margin-right: 6px;
            display: inline-block;
            vertical-align: middle;
            content: '';
            width: 17px;
            height: 17px;
        }
        /* Affichage du bouton radio personnalisé quand il est sélectionné */
        input[type=radio]:checked + label:before {
            background: #1197d0;
            border-color: #1197d0;
            box-shadow: inset 0px 0px 0px 2px #fff;
        }
        .element{
            margin-bottom:14px;
        }
        label{
            cursor:pointer;
        }
                .right {
            float:right;
        }
        .block h2 {
            font-size: 16px;
            float:left;
        }
        .block input, .block label, .block select {
            margin-top: 15px;
            margin-left: 10px;
            width: 100px;
        }
        .col_id {
            text-align: center;
            color:white;
            background: orangered;
        }
        .active{
            background: #868686;
        }
        textarea {
            width: 99%;
            height: 40px;
            margin: 0px;
        }
        .table_input {
            text-align: center;
        }
        th {
            background-color: #1197d0;
            color: white;
            padding: 5px;
            text-transform: uppercase;
        }
        td {
            /*width: 50px;*/
        }

        tr:nth-child(odd) {
            background: #cbdaff;
        }
        .warning {
            border:1px solid palevioletred;
        }
        h3 {
            color: white;
            background: orangered;
            width: 100px;
            padding: 5px;
            text-align: center;
        }
        .error label{
            display: none;
        }

        #form_save {
            border: none;
            padding: 12px;
            color: white;
            padding-right: 20px;
            padding-left: 20px;
            margin-top: 35px;
            float: right;
            border-radius: 5px;
        }
        @media screen and (max-width: 640px) {
            table,
            tbody,
            tr,
            td {
                display: block;
                width: auto!important;
                /* parceque tu as mis des style inline grrr */
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
    <script type="text/javascript">
       jQuery.validator.setDefaults({
            debug: false,
            success: "valid"
        });
        var form = $("#myForm");
        form.validate({ errorPlacement: function(error, element) {} });
        form.on('change', function () {

            if(form.valid()){
                $('#form_save').prop("disabled",false);
                $('#form_save').css("background", "#1197d0");
            }
            else {
                $('#form_save').prop("disabled",false);
            }
            $(".error label").hide();
        });
    </script>
{% endblock %}


