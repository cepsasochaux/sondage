    .left {
        float: left;
        width: 275px;
        margin-top: 40px;
    }
    .right {
        float: right;
        width:345px;
        margin-left: 30px;
        margin-top: 40px;
    }
    #form_save {
        height:40px;
        background: orangered;
    }
