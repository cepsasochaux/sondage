{% extends 'base.html.twig' %}

{% block body %}
<div id="wrapper">
    <div id="container">
        <div id="DIV_1">
            <h1 id="H1_2">
                Tombola
            </h1>
            <div id="content_first" class="clearfix">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="left">
                {{ form_label(form.lastname) }}
                {{ form_widget(form.lastname) }}<br>
                {{ form_label(form.firstname) }}
                {{ form_widget(form.firstname) }}<br>
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}<br>
                {{ form_label(form.telephone) }}
                {{ form_widget(form.telephone) }}<br>


                {{ form_label(form.code_personnel) }}
                {{ form_widget(form.code_personnel) }}<br>
                <p>Vous pouvez retrouver le règlement en cliquant <a target="_blank" href="/bundles/app/images/reglement.pdf">ici</a>.<br> Attention une fois le formulaire envoyé vous ne pourrez plus accèder à cette page. </p>
                {{ form_widget(form.save) }}

            </div>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Calibri Light';

    }
    label {
        background: orangered;
