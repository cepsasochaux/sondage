<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Cepsa Sochaux | Tombola{% endblock %}</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('/bundles/app/css/style.css') }}">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link href="https://fonts.googleapis.com/css?family=Advent+Pro" rel="stylesheet">
    <script src="{{ asset('/bundles/app/js/jquery.min.js') }}"></script>
    <script src="{{ asset('/bundles/app/js/Nibbler.js') }}"></script>
</head>
<body>
<div id="wrapper">
    <div id="container">
        <div id="DIV_1">
            <h1>Tombola</h1>
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="left">
                {{ form_label(form.lastname) }}
                {{ form_widget(form.lastname) }}<br>
                {{ form_label(form.firstname) }}
                {{ form_widget(form.firstname) }}<br>
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}<br>
                {{ form_label(form.telephone) }}
                {{ form_widget(form.telephone) }}<br>
            </div>

            <div class="right">

            </div>
            {{ form_widget(form.save) }}
            {{ form_end(form) }}

        </div>
    </div>
</div>
<script type="text/javascript"></script>
<style>
    body {
        font-family: Calibri Light;

    }
    label {
        background: orangered;
        padding:5px;
        color: #FFFFFF;
    }
    input {
        height: 25px;
    }
    form{
        min-width: 100px;
        display: inline-block;
    }

    form input{
        float: right;
    }

    form label{
        display: inline-block;
        margin-bottom: 2px;
        background: orangered;
        width: 78px;
    }
    .left {
        float: left;
        width: 265px;
    }
    .right {
        float: right;
        width:50%;
    }
</style>
</body>
</html>



